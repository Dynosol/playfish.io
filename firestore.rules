rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: public read (for usernames), owner-only write
    match /users/{uid} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == uid;
      allow delete: if false;
    }

    // Lobbies: public read, players can modify
    match /lobbies/{lobbyId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null &&
                     request.resource.data.createdBy == request.auth.uid;
      allow update: if request.auth != null &&
                    request.auth.uid in resource.data.players;
      allow delete: if false;

      // Lobby chat messages
      match /messages/{messageId} {
        allow read: if request.auth != null &&
                    request.auth.uid in get(/databases/$(database)/documents/lobbies/$(lobbyId)).data.players;
        allow create: if request.auth != null &&
                      request.resource.data.userId == request.auth.uid &&
                      request.auth.uid in get(/databases/$(database)/documents/lobbies/$(lobbyId)).data.players;
        allow update, delete: if false;
      }
    }

    // Deleted lobbies: archive-only
    match /deletedLobbies/{lobbyId} {
      allow read: if false;
      allow create: if request.auth != null;
      allow update, delete: if false;
    }

    // Games: players-only access
    match /games/{gameId} {
      allow read: if request.auth != null &&
                  request.auth.uid in resource.data.players;
      allow create: if request.auth != null &&
                    request.auth.uid in request.resource.data.players;
      allow update: if request.auth != null &&
                    request.auth.uid in resource.data.players;
      allow delete: if false;

      // Chat messages
      match /messages/{messageId} {
        allow read: if request.auth != null &&
                    request.auth.uid in get(/databases/$(database)/documents/games/$(gameId)).data.players;
        allow create: if request.auth != null &&
                      request.resource.data.userId == request.auth.uid &&
                      request.auth.uid in get(/databases/$(database)/documents/games/$(gameId)).data.players;
        allow update, delete: if false;
      }
    }
  }
}
